  border-radius: 30rpx;
}

.resp-at-cell {
  width: 14%;
  margin-right: 20rpx;
}

.resp-input-cell {
  width: 70%;
  margin-right: 20rpx;
}

.resp-btn {
  height: 60rpx;
  width: 16%;
