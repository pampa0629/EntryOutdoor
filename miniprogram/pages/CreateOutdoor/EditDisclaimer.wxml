<van-panel use-footer-slot>
	<van-cell slot="header" title-class="redtitle" title="免责条款" label="请拷贝后这里粘贴生成"></van-cell>
  <view><text style="font-size:12pt">{{disclaimer}}</text></view>
  <van-row>
    <van-col span="9" offset="2">
      <van-button plain type="primary" size="large" bind:click="pasteDisclaimer">粘贴生成条款</van-button>
    </van-col>
    <van-col span="9" offset="2">
      <van-button plain size="large" bind:click="copyDisclaimer">拷贝到剪切板</van-button>
    </van-col>
  </van-row>

  <van-row>
    <van-col span="9" offset="2">
      <van-button plain size="large" bind:click="loadMyDisclaimer">加载我的条款</van-button>
    </van-col>
    <van-col span="9" offset="2">
      <van-button plain size="large" bind:click="saveMyDisclaimer">存为我的条款</van-button>
    </van-col>
  </van-row>
</van-panel>

