<van-cell title="占坑/报名截止时间" label="" value="点击设置截止时间" is-link url="EditEndTimes" border="{{false}}"/>

<!--活动装备-->
<van-cell title="活动装备要求" label="" value="点击设置活动装备" is-link url="EditEquipments" border="{{false}}"/>

