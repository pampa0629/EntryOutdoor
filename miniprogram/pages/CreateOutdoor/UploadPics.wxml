 
<van-tag size="{{size}}" type="danger" plain wx:if="{{pics.length>=3}}">照片数量不能超过三张</van-tag>
<van-tag size="{{size}}" type="primary" plain>照片上传删除即时生效，无需保存</van-tag>

<van-button  size="large" disabled="{{pics.length>=3||!outdoorid}}" type="primary" bind:click='addPic'>上传照片</van-button> 
<van-button disabled="{{pics.length==0}}" size="large" type="warning" bind:click='deletePic'>删除照片</van-button> 

<view wx:for="{{pics}}" wx:key="src"> 
  <van-row>
    <van-col span="20" offset="2">
      <image mode="widthFix" src="{{item.src}}" bindtap="viewImages" data-pos='{{index}}' show-menu-by-longpress></image>
    </van-col>
  </van-row>
</view> 